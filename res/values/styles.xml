<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Quickfoods" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_quickfoods</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Quickfoods</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Quickfoods</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Quickfoods</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Quickfoods</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Quickfoods</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_quickfoods</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_quickfoods</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Quickfoods</item>
        <item name="android:buttonStyle">@style/Theme.QuickFoods.button</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="ActionBar.Solid.Quickfoods" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/theme_background_dark</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Quickfoods</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
       <item name="android:textColor">@color/white</item> 
    </style>

    <style name="ActionBar.Transparent.Quickfoods" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_quickfoods</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Quickfoods</item>
    </style>

    <style name="PopupMenu.Quickfoods" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_quickfoods</item>	
    </style>

    <style name="DropDownListView.Quickfoods" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_quickfoods</item>
    </style>

    <style name="ActionBarTabStyle.Quickfoods" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_quickfoods</item>
    </style>

    <style name="DropDownNav.Quickfoods" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_quickfoods</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_quickfoods</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_quickfoods</item>
    </style>
    
    <style name="ProgressBar.Quickfoods" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_quickfoods</item>
    </style>
    
    <style name="ActionButton.CloseMode.Quickfoods" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_quickfoods</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Quickfoods.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Quickfoods</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Quickfoods</item>
    </style>
        
    <style name="Theme.QuickFoods.button" parent="@android:style/Widget.Holo.Button">
          <item name="android:background">@drawable/round_blue_button</item>
    </style>

    <style name="Theme.Quickfoods.ItemListTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>