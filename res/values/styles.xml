<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Quickfoods" parent="Theme.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/theme_background_dark</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Quickfoods</item>
        <item name="colorPrimary">@color/theme_background_dark</item>
        <item name="colorPrimaryDark">@color/theme_background_light</item>
        <item name="editTextColor">#000000</item>
        <item name="android:textColorHint">#555555</item>
        <item name="android:buttonStyle">@style/Theme.QuickFoods.button</item>
    </style>

    <style name="ActionBar.Solid.Quickfoods" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/theme_background_dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Theme.QuickFoods.button" parent="@android:style/Widget.Holo.Button">
          <item name="android:background">@drawable/button</item>
            <item name="elevation">8dp</item>
        <item name="android:width">@dimen/action_button_min_width_material</item>
        <item name="android:height">@dimen/action_button_min_height_material</item>
    </style>

    <style name="Theme.Quickfoods.ItemListTextView" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>