<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="#3F51B5" />

        </shape>
    </item>
    <item>
        <layer-list>
            <!-- you can stack this up
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#109FA8DA" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape>
            </item>
            -->
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#209FA8DA" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape>
            </item>

            <item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp">
                <shape>
                    <solid android:color="@color/theme_background_light" />
                    <stroke android:width="1dp" android:color="#9FA8DA" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>